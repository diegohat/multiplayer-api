{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "api",
            "cargo": {
                "args": [
                    "build",
                    "--bin=api",
                ],
                "filter": {
                    "name": "api",
                    "kind": "bin"
                }
            },
            "env": {
                "RUST_ENV": "local",
                "APP_NAME": "api",
                "RUST_BACKTRACE": "full"
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        }
    ]
}